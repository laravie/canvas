{
    "name": "orchestra/canvas",
    "description": "Code Generators for Laravel Applications and Packages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        },
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "bin": [
        "canvas"
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Canvas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Canvas\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/database": "^10.0",
        "illuminate/support": "^10.0",
        "orchestra/canvas-core": "^8.0",
        "symfony/yaml": "^5.3 || ^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "phpstan/phpstan": "^1.8",
        "orchestra/testbench": "^8.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.0-dev"
        },
        "laravel": {
            "providers": [
                "Orchestra\\Canvas\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php testbench package:discover --ansi",
        "ci": [
            "@composer run prepare",
            "@php vendor/bin/phpstan analyse",
            "@php vendor/bin/pint",
            "@composer run test"
        ],
        "test": "@php vendor/bin/phpunit -c ./ --color"
    },
    "minimum-stability": "dev"
}
