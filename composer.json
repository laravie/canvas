{
    "name": "orchestra/canvas",
    "description": "Code Generators for Laravel Applications and Packages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        },
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "bin": [
        "canvas"
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Canvas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Canvas\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": "^8.0",
        "illuminate/database": "^9.45",
        "illuminate/support": "^9.45",
        "orchestra/canvas-core": "^7.3",
        "symfony/yaml": "^5.4 || ^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "phpstan/phpstan": "^1.9.14",
        "laravel/framework": "^9.52.15",
        "mockery/mockery": "^1.5.1",
        "orchestra/testbench-core": "^7.29",
        "orchestra/workbench": "^0.1.7",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ray": "^1.32.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.0-dev"
        },
        "laravel": {
            "providers": [
                "Orchestra\\Canvas\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@composer run prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "ci": [
            "@composer run prepare",
            "@php vendor/bin/phpstan analyse",
            "@php vendor/bin/pint",
            "@composer run test"
        ],
        "test": "@php vendor/bin/phpunit -c ./ --color",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@prepare",
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "minimum-stability": "dev"
}